{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "react-jsx",
        "module": "esnext",
        "strict": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "rename-types.ts", "global.d.ts", ".eslintrc.js", "rollup.config.mjs", "tailwind.config.ts", "examples/app/test.tsx", "examples/app"],
    "exclude": ["node_modules", "dist"]
}
