{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "react-jsx",
        "module": "esnext",
        "strict": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
          "@/*": ["src/*"],
        }
    },
    "include": [
      "src/**/*", 
      "rename-types.ts", 
      "global.d.ts",
      ".eslintrc.js",
    ],
    "exclude": ["node_modules", "dist"]
}
